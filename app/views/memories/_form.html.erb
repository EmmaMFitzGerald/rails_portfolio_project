<%= form_for @memory, url: child_memories_path(@child) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.hidden_field :child_id %>
  <%= f.hidden_field :user_id %>
    <%= f.fields_for :category do |c| %>
       <%= c.label :category, "Category "%>
       <%= c.text_field :name, list: "categories_autocomplete" %>
        <datalist id="categories_autocomplete">
          <% Category.all.each do |category| %>
            <option value="<%= category.name %>">
          <% end %>
        </datalist>
    <% end  %>
  <%= f.label :content %>
  <%= f.text_area :content %>
  <%= f.label :date %>
  <%= f.date_field :date %>
  <%=  f.label "Add a picture to your memory!"%>
  <%= f.file_field :avatar %>
  <%= f.submit %>
<% end %>


   