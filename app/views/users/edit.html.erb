<% if @user.errors.any? %>
<h2>The following errors prevented the User from being changed</h2>
<ul>
<% @user.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
</ul>
<% end %>

<%= form_for @user do |f| %>
<%= f.label :email, "Change email" %>
<%= f.email_field :email, placeholder: "Enter new email"%>
<%= f.label :name, "Change name"%>
<%= f.text_field :name, placeholder: "Enter new name"%>
 <%=f.label :password, "Change Password" %>
<%= f.password_field :password, placeholder: "Choose a password"%>
<%= f.label :password_confirmation, "Confirm Password" %>
<%= f.password_field :password_confirmation, placeholder: "Confirm password" %>
<%= f.submit %>
<% end %>